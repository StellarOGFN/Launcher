{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "stellar",
  "version": "0.1.0",
  "identifier": "com.stellar.dev",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "stellar",
        "width": 1100,
        "height": 640,
        "decorations": false,
        "fullscreen": false,
        "resizable": false,
        "center": true,
        "transparent": true
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": ["**"]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": ["icons/icon.png", "icons/icon.ico"]
  }
}
